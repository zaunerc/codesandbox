{
	"compilerOptions": {
		"outDir": "dist",
		"jsx": "react",
		"target": "es5",
		"lib": [
			"es6",
			"dom"
		],
		"module": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
	],
}
